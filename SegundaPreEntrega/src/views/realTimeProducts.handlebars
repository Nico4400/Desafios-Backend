<h1>Vista de productos en tiempo real</h1>

<!-- Formulario para crear un producto -->
<form id="createProductForm">
    <label>Nombre: </label> <input type="text" id="productName" required />
    <br>
    <br>
    <label>Descripción: </label> <input type="text" id="productDescription" required />
    <br>
    <br>
    <label>Código: </label> <input type="text" id="productCode" required />
    <br>
    <br>
    <label>Precio: </label> <input type="number" id="productPrice" required />
    <br>
    <br>
    <label>Stock: </label> <input type="number" id="productStock" required />
    <br>
    <br>
    <label>Category: </label> <input type="text" id="productCategory" required />
    <br>
    <br>
    <label>Imagen: </label> <input type="text" id="productThumbnail" required />
    <br>
    <br>
    <button type="button" onclick="createProduct()">Agregar Producto</button>
    <br>
    <br>
    <br>
</form>

<!-- Formulario para eliminar un producto -->
<form id="deleteProductForm">
    <label>ID del Producto a Eliminar: </label> <input type="number" id="productIdToDelete" required/>
    <br>
    <br>
    <button type="button" onclick="deleteProduct()">Eliminar Producto</button>
    <br>
</form>

{{!-- Para crear el listado de Productos --}}
<ul id="productList"></ul>

